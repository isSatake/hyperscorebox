{
  "name": "hyperscorebox",
  "version": "0.0.0",
  "description": "hyperscore Chrome Extension",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run copy && tsc && npm run browserify",
    "clean": "cd dist/ && ls | xargs rm",
    "copy": "cp ./manifest.json ./dist && cp ./style/style.css ./dist && cp ./style/abcjs-midi.css ./dist",
    "browserify": "browserify ./dist/content.js -o ./dist/content.js"
  },
  "author": "stkay <stkayy@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "0.0.72",
    "@types/node": "^10.5.2",
    "browserify": "^16.2.2",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "abcjs": "^5.3.4",
    "jquery": "^3.3.1"
  }
}
